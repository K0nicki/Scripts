# ls aliases
alias l="ls"
alias ll="ls -al"

# clear alias
alias c="clear"

# Path tracking aliases
alias cd="pushd &>/dev/null"
alias back="popd &>/dev/null"

# Colorful prompt
rand=$RANDOM
number=$(( $rand % 6 ))
lightness=$(( $rand % 2 ))
export PS1="${debian_chroot:+($debian_chroot)}\[\033["$lightness";3"$number"m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ "


